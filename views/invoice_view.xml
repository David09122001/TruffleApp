<odoo>
    <data>

        <!-- Tree view definition -->
        <record model="ir.ui.view" id="truffle_app.tree_view_invoice">
            <field name="name">Invoice Tree View</field>
            <field name="model">truffle_app.invoice_model</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="reference" />
                    <field name="date" />
                    <field name="total" /> <!-- sin vat-->
                    <field name="vat" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <!-- Form view definition -->
        <record model="ir.ui.view" id="truffle_app.form_view_invoice">
            <field name="name">Invoice Form View</field>
            <field name="model">truffle_app.invoice_model</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="confirmInvoice" type="object" string="Change state" class="oe_highlight" confirm="Change state of the order?" attrs="{'invisible': [('state','=', 'C')]}"></button>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <field name="reference" readonly='True'/>
                        <field name="date" attrs="{'readonly': [('state','=', 'C')]}"/>
                        <field name="base" readonly='True'/>
                        <field name="vat" attrs="{'readonly': [('state','=', 'C')]}"/>
                        <field name="lines" attrs="{'readonly': [('state','=', 'C')]}"/>
                        <field name="client" attrs="{'readonly': [('state','=', 'C')]}"/>
                     <!--   <field name="product"/> 
                        <field name="quantity"/>-->
                        <field name="total" readonly='True'/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Action definition -->
        <record model="ir.actions.act_window" id="truffle_app.invoice_action_window">
            <field name="name">Invoice</field>
            <field name="res_model">truffle_app.invoice_model</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="truffle_app.tree_view_invoice" />
        </record>

    </data>
</odoo>